<head>
  <title>RE:space</title>
  
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="assets/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
  <style>
    body{
      font-family: 'SeoulHangangM';
    }
    .logo{
      font-family: 'designhouseOTFLight00';
      font-size: 45px;
      color: #BCE27F;
      background-color: rgba(0,0,0,0);
      margin-top: 10px;
    }
    .logo:hover{
      color: #BCE27F;
      text-decoration: none;
      background-color: rgba(255,255,255,0);
    }
    #mainNav{
     position: fixed;
    }
    #form{
      font-family: 'SeoulHangangM';
    }
    .form-group{
      margin-bottom: 5%;
    }
    .custom-control{
      margin-top: 3%;
    }
    .login-container{
        width:50%;
        height: 80%;
        margin-top: 5%;
        padding-top: 2%;
        padding-bottom: 1%;
        border-style: solid;
        border-color: #96B566;
        background-color: #ffffff;
        text-align: center;
        display: none;
    }
    .form-control{
      height: 6%;
    }
    
    .signUp-container{
      margin-top: 8%;
      height: 90%;
      display: -webkit-flex;
      -webkit-flex-direction: row;
      display: flex;
      flex-direction: row;
    }
    
    #signupImg{
      width: 50%;
      height: 100%;
      margin-right: 5%;
    }
    .sup-form-container{
      height: 100%;
       display: -webkit-flex;
      -webkit-flex-direction: column;
      display: flex;
      flex-direction: column;
    }
    .form-inputs, .form-actions{
      text-align: center;
      width: 50%;
      margin-bottom: 5%;
    }
    .supply, .customer{
      width: 30%;
      float: left;
      margin-right: 10%;
      padding: 50px; 
      background-color: #BCE27F; 
      font-family: 'SeoulHangangM'; 
      font-size: 30px;
      color: white ;
      border: 2px solid;
      border-color: #96B566; 
      border-radius:30px;
    }
    
    a.supply:visited, a.customer:visited{
      color: white;
    }
    a:hover{
      background-color: rgba(0,0,0,0);
    }
    a.btn:hover{
      background-color:#96B566;
    }
    .supply:hover, .customer:hover{
      background-color: #BCE27F; 
      color: white ;
      text-decoration: none;
    }
    .links:visited{
      color: #000000 !important;
    }
    .content-area{
      min-height:300px;
    }
    .btn{
      background-color: #96B566;
      outline: none;
    }
    .btn:active{
      outline:none;
    }
    a.nav-link:hover{
        color: #BCE27F;
    }
    /*리뷰부분 css*/
    .review-card{
      border: 1px solid lightgray;
      border-radius: 30px;
      margin-top: 3%;
      /*margin-bottom: 5%;*/
      width: 50%;
      max-height: 80%;
      padding: 4%;
    }
    a.review-card:hover{
      opacity:0.7;
      background-color: rgba(234,234,234,0.8);
    }
    .show-container{
      width: 50%;
      max-height: 100%;
      padding: 15px;
      border: 1px solid #BCE27F;
      border-radius: 10px;
    }
  </style>
  <script>
    $(window).scroll(function(){
        if($(window).scrollTop()){
          $("#mainNav").css("background-color", "rgba(0,0,0,0.8)");
          $("a.nav-link").css("color","white;");
        }
        else{
          $("#mainNav").css("background-color", "rgba(0,0,0,0)");
          $("a.nav-link").css("color","white;");
        }
    });
    
  </script>
</head>
<body>
<!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
          <div class="offset-1 col-3">
            <% if user_signed_in? %>
            <%= link_to current_user.name, "/mypages/#{current_user.id}", :class => "left" %><span style="margin-right: 10%">님</span>
            <%= link_to "로그아웃", destroy_user_session_path, :class => "left" %>
            <% else %>
            <%= link_to '로그인' ,new_user_session_path, :class => "left" , :style => "margin-right: 10%;"%>
            <%= link_to '회원가입' , new_user_registration_path, :class => "left" %>
            <% end %>
          </div>
            <%= link_to 'RE:space', '/', :class => "logo offset-1 col-3" %>
          <div id="navbarResponsive" class="offset-1 col-4">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/home/matching">리모델링 찾기</a>
              </li>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/reviews">리뷰</a>
              </li>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/notices">공지</a>
              </li>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/qnas">QnA</a>
              </li>
            </ul>
          </div>
    </nav>
<%= yield %>
<script src="assets/javascripts/jquery.min.js"></script>
<script src="assets/javascripts/bootstrap.min.js"></script>
<script src="assets/javascripts/owl.carousel.min.js"></script>
<script src="assets/javascripts/venobox.min.js"></script>
<script src="assets/javascripts/jquery.knob.js"></script>
<script src="assets/javascripts/wow.min.js"></script>
<script src="assets/javascripts/parallax.js"></script>
<script src="assets/javascripts/easing.min.js"></script>
<script src="assets/javascripts/jquery.nivo.slider.js" type="text/javascript"></script>
<script src="assets/javascripts/jquery.appear.js"></script>
<script src="assets/javascripts/isotope.pkgd.min.js"></script>
<script src="assets/contactform.js"></script>
<script src="assets/main.js"></script>


</body>
</html>