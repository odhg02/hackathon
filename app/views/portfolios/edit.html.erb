<form method='post' action='/portfolios/update/#{@user.id}'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
       <p>이름</p>
       <input type="text" name="name" value='<%=@portfolio.name%>' required/>
       <p>경력</p>
       <textarea name = "career" cols = "50" rows = "5"><%=@portfolio.career%></textarea>
       <p>학력(대학교)</p>
       <select name="grade" value="@portfolio.grade">
   	<option value="1">1학년</option>
   	<option value="2">2학년</option>
   	<option value="3">3학년</option>
   	<option value="4">4학년</option>
   	<option value="5">졸업</option>
       </select>
       <p>자기소개</p>
       <textarea name = "introduction" cols = "50" rows = "5"><%=@portfolio.introduction%></textarea>
       <p>
   	<input type="submit" value="submit">
   	<input type = "reset" value = "reset"/>
   	</p>
</form>