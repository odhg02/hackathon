<br><br><br><br><br>
  <% if @temp == "1" %>
  <div class="text-center album py-5" display="none">
    <div class="album py-5 offset-sm-1 col-10">
      <div class="row">
        <% @mypages.each do |mypage| %>
          <% if mypage.user.user_type == "1" %>
          <div class="col-md-3">
            <div class ="card mb-4 box-shadow"> 
              <div class="card-body">
                <% if mypage.user.avatar.blank? %>
                  <%= link_to image_tag("default_image.png"), "/mypages/#{mypage.user.id}", :class => "post-title-text" %>
                <% else %>
                  <%= link_to image_tag("#{mypage.user.avatar}"), "/mypages/#{mypage.user.id}", :class => "post-title-text" %>
                <% end %>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="offset-2 btn-group"><br/>
                    <center><label><%= mypage.user.name %></label><br>
                    <%= mypage.user.introduce %><br>
                    좋아요 : <%= mypage.get_upvotes.size %>
                    싫어요 : <%= mypage.get_downvotes.size %></center>
                  </div>
                </div
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
    </div>
  
  <!--소비자-->
  <% elsif @temp == "2" %>
  <center>
    <% if (current_user.user_type == "2" && @temp == "2") || (current_user.user_type == "3" && @temp == "2") %>
      <%= link_to '생성', new_post_path, :class => 'btn btn-lg btn-block', :style => "background-color: #96B566; width: 20%; margin-bottom: 5%" %>
    <% end %>
    <form action="/posts/2/search" method="get">
      <select class="custom-select col-2" name="category" style="font-size: 14px;">
        <option selected>분류</option>
        <option value="공사">공사</option>
        <option value="리모델링">리모델링</option>
        <option value="리모델링+공사">리모델링+공사</option>
      </select>
      <button type="submit" style="color:white; font-size:13px;" class="btn btn-danger btn-sm btn-signin">이동</button>
    </form>
  </center>
  <div class="container">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th class="text-center">번호</th>
          <th class="text-center">이름</th>
          <th class="text-center">제목</th>
          <th class="text-center">내용</th>
          <th class="text-center">분류</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td class="text-center"><%=post.id%></td>
            <td class="text-center"><%=post.user.name%></td>
            <td class="text-center"><%= link_to post.title, post, :class => "post-title-text" %></td>
            <td class="text-center"><%=post.content.html_safe%></td>
            <td class="text-center"><%=post.category%></td>
            <td class="text-center">
              <%= link_to '수정', edit_post_path(post) , :class => "btn", :style => "background-color: #BCE27F;" %>
              <%= link_to '삭제', post, method: :delete, :class => "btn btn-light post-title-delete",  data: { confirm: '정말 삭제하시겠습니까?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  <% end %>
  <%= paginate @posts %>
